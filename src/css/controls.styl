#controls
  position: fixed
  top: 0
  right: -300px
  min-width: 200px
  max-width: 300px
  width: 20vw
  height: 100vh
  overflow: auto
  background-color: $themeBGColor
  transition: right $themeTransitionTime ease-in
  box-shadow: -4px 2px 12px $themeShadowColor
  opacity: 0.8
  
  #close-controls
    position: absolute
    left: 1rem
    top: 1rem
    width: 1rem
    height: 1rem
    line-height: 1rem
    display: block
    cursor: pointer
    
  .content
    width: 100%
    display: block
    padding: $themeElementPadding * 2 $themeElementPadding
    
    & > *
      width: 100%
      
      & > *
        margin-bottom: $themeElementPadding
        
  .speed-controls
    & > *
      column 1/3 3 $themeElementPadding
      text-align: center
      
  .records
    & > *
      width: 100%
      word-break: break-all
      
      & > *
        column 1/2 2 ($themeElementPadding * .5)
      
        &:last-child
          column 1 1 0
  
#controls-toggle:checked ~ #controls
  right: 0