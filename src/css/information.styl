#information
  position: fixed
  top: 0
  width: 100vw
  display: table
  color: $themeTextColorInverted
  
  indicators
    position: absolute
    top: 2rem
    margin: 0 auto
    left: 0
    right: 0
    max-width: 500px
    width: 100vw    
    text-align: center
    
    & > *
      margin: 0 ($themeElementPadding * .5)
        
  #open-controls
    position: absolute
    right: 2rem
    top: 1rem
    height: 1rem
    line-height: 1rem
    display: block
    cursor: pointer